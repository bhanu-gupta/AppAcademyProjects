<h1> Rent a Cat</h1>

<form action="<%= cat_rental_requests_url%>" method="POST">
    <label for="all_cats">Cat:</label>
    <select name="cat_rental_request[cat_id]" id="all_cats">
        <option disabled selected>---Select Cat---</option>
        <% @cats.each do |cat|%>
            <option value="<%= cat.id%>"><%= cat.name%></option>
        <% end %>
    </select>

    <label for="start_date">Start Date:</label>
     <input id="start_date" type="date" name="cat_rental_request[start_date]" >

     <label for="end_date">End Date:</label>
     <input id="end_date" type="date" name="cat_rental_request[end_date]" >


    <input type="submit" value='Create'>
</form>